{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:base"],
  dependencyDashboard: true,
  enabledManagers: ["yarn"],
  labels: ["dependencies"],
  automerge: false,
  vulnerabilityAlerts: {
    enabled: true,
    labels: ["security"],
  },
  "packageRules": [
    {
      "groupName": "jest monorepo",
      "matchSourceUrls": [
        "https://github.com/kulshekhar/ts-jest"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    }
  ]
}
